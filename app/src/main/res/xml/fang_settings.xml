<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

  <PreferenceCategory android:title="Settings">

    <MultiSelectListPreference
        android:key="item_touch_behaviour"
        android:title="Item touch behaviour"
        android:summary="What happens when you touch an item"
        android:entries="@array/touch_behaviours"
        android:entryValues="@array/touch_behaviours"
        android:dialogTitle="title"/>

      <ListPreference
          android:key="defaultFragment"
          android:title="Landing page"
          android:summary="Which page the app launches into"
          android:entries="@array/landing_pages"
          android:entryValues="@array/landing_pages_values"
          android:dialogTitle="Landing page"
          android:defaultValue="LATEST"/>

  </PreferenceCategory>

</PreferenceScreen>