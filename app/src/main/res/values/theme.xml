<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="FangTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/FangActionBar</item>
    <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
    <item name="android:progressBarStyleHorizontal">@style/FangProgressTheme</item>
    <item name="android:seekBarStyle">@style/FangSeekBarTheme</item>
  </style>

  <style name="FangActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/fang_ascent</item>
    <item name="android:titleTextStyle">@style/FangTextStyle</item>
  </style>

  <style name="FangTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="FangDetailsTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/FangDetailsActionBar</item>
    <item name="android:actionOverflowButtonStyle">@android:style/Widget.Holo.ActionButton.Overflow</item>
    <item name="android:progressBarStyleHorizontal">@style/FangProgressTheme</item>
    <item name="android:seekBarStyle">@style/FangSeekBarTheme</item>
  </style>

  <style name="FangDetailsActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/ab_trans_white</item>
    <item name="android:titleTextStyle">@style/FangDetailsTextStyle</item>
  </style>

  <style name="FangDetailsTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">1</item>
  </style>

  <style name="FangProgressTheme" parent="android:Widget.ProgressBar.Horizontal">
    <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
    <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo_light</item>
    <item name="android:minHeight">16dip</item>
    <item name="android:maxHeight">16dip</item>
  </style>

  <style name="FangSeekBarTheme" parent="android:Widget.SeekBar">
    <item name="android:progressDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
    <item name="android:indeterminateDrawable">@drawable/scrubber_progress_horizontal_holo_light</item>
    <item name="android:minHeight">13dip</item>
    <item name="android:maxHeight">13dip</item>
    <item name="android:thumb">@drawable/scrubber_control_selector_holo_light</item>
    <item name="android:thumbOffset">16dip</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">0dp</item>
  </style>

</resources>